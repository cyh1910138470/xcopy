/* container.wxss */

/* 页面整体容器（占满屏幕） */
page {
  height: 100vh; /* 用 vh 更可靠，直接对应屏幕高度 */
  /* padding-top: 100rpx; 顶部固定内边距 */
  overflow: hidden;
  box-sizing: border-box;
  /* 背景渐变（只显示顶部25%） */
  background: 
    linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%),
    linear-gradient(to right, #d1ead8, #f0f7ff);
  background-size: 100% 12%;
  background-repeat: no-repeat;
  background-color: #F2F3F5;
}

/* 滚动容器（减去顶部和底部固定高度） */
.scrollarea {
  width: 100%;
  /* 屏幕高度 - 顶部padding(100rpx) - tabbar高度(100rpx) */
  height: calc(100vh - 100rpx - 100rpx); 
  box-sizing: border-box;
}

/* 内容容器（填满滚动区域） */
.content-container {
  width: 100%;
  min-height: 100%; /* 确保内容区高度足够 */
}

/* 自定义 TabBar 固定在底部 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 999;
  background-color: #fff;
  border-top: 1px solid #eee;
}

/* 所有子页面组件样式（确保占满内容区） */
index-page, work-page, todo-page, mine-page, manage-page {
  display: block;
  width: 100%;
  min-height: 100%; /* 关键：占满父容器 */
}